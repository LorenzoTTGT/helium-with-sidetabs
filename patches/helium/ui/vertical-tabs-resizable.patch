+bool VerticalTabStripResizeArea::OnMousePressed(const ui::MouseEvent& event) {
+  if (event.IsOnlyLeftMouseButton()) {
+    resize_start_x_ = event.location().x();
+    initial_width_ = browser_view_->GetVerticalTabStripWidth();
+    is_resizing_ = true;
+    return true;
+  }
+  return false;
