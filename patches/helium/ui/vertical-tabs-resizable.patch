+
+bool VerticalTabStripResizeArea::OnMouseDragged(const ui::MouseEvent& event) {
+  if (!is_resizing_)
+    return false;
+
+  int delta = event.location().x() - resize_start_x_;
+
+  // Check if sidebar is on the right side
+  PrefService* prefs = browser_view_->GetProfile()->GetPrefs();
+  bool on_right = prefs->GetBoolean("helium.vertical_tabs.on_right");
+
+  if (on_right) {
+    delta = -delta;  // Reverse delta for right-side
+  }
